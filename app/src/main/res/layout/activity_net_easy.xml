<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_282828">

    <View
        android:id="@+id/v1"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <View
        android:id="@+id/v2"
        android:layout_width="3dp"
        android:layout_height="3dp"
        android:layout_alignStart="@+id/v1"
        android:layout_alignTop="@+id/v1"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone" />


    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:visibility="visible"
        tools:progress="50" />

    <com.jacky.wanandroidkotlin.test.MyLayout
        android:id="@+id/my_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="visible" />

    <com.jacky.wanandroidkotlin.test.ADashboard
        android:id="@+id/a_dash"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/my_view" />

</RelativeLayout>